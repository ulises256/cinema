mobile-1250 = '@media only screen and (max-width: 1250px)'
mobile766 = 'only screen and (max-width: 766px)'
mobile410 = 'only screen and (max-width: 414px)'
@font-face
    font-family Book
    font-weight 400
    src url(/assets/fonts/BookAntiqua.ttf)

.home
    display flex
    width 100%
    height 100%
    justify-content center
    align-items center
    background-color black
    .home-content
        display flex
        flex-direction column
        width 100%
        height 100%
        section
            width 100%
            &.estrenos
                color white
                height 600px
                background-position center
                background-repeat no-repeat
                background-size cover
                .estrenos-content
                    display flex
                    flex-direction column
                    height 100%
                    margin 10px 50px 10px 50px
                    @media mobile766
                        width 100%
                        margin 0px 0px 0px 0px
                    h2
                        font-size 34px
                    .titulo
                        display flex
                        flex-direction column
                        @media mobile766
                            justify-content flex-start
                        justify-content center
                        align-items center
                        height 100%
                        .title
                            @media mobile766
                                display flex
                                flex-direction column
                                width 90%
                                align-items center
                            h1
                                font-family: Book
                                @media mobile766
                                    font-size 60px
                                @media mobile410
                                    font-size 43px               
                                font-size 100px
                                height 10px
                            p
                                font-family: Book
                                @media mobile766
                                    font-size 34px
                                @media mobile410
                                    font-size 25px
                                    margin-top: 25px
                                font-size 54px
                            .line-white
                                @media mobile766
                                    width 90%
                                position absolute
                                background-color white
                                width 250px
                                opacity 0.5
                        #lineRight
                            @media mobile766
                                display none                       
                        .button
                            width 15%
                            height 10%
                            @media mobile766
                                width 40%
                            .mat-raised-button
                                width 100%
                                height 100%
                                border-radius 10px
                                display flex
                                justify-content center
                                align-content center
                                font-size 24px
                                background-color black
                                line-height 46px
            &.cartelera
                display flex
                color white
                background-color #212121
                @media mobile766
                    height 400px                
                @media mobile410
                    height 250px
                height 600px
                width 100%
                justify-content center
                align-items center
                .cartelera-content
                    display flex
                    flex-direction column
                    position relative
                    height 100%
                    width 80%
                    @media mobile766
                        margin 0px 0px 0px 0px
                        width 100%                        
                    @media mobile410
                        margin 0px 0px 0px 0px
                        width 100%
                    margin 10px 50px 10px 50px
                    h2
                        font-size 34px
                    .pelis
                        display flex
                        flex-direction row
                        justify-content center
                        align-items center
                        width 100%
                        button
                            margin 10px 10px 10px 10px
                        mat-grid-list
                            width 100%
                            .mat-grid-tile
                                @media mobile766
                                    height 80px
                                @media mobile410
                                    height 40px
                                height 0px
                                background-position center
                                background-repeat no-repeat
                                background-size cover
                                cursor pointer
                                .mat-grid-tile-footer
                                    @media mobile410
                                        height 100% 
                                    @media mobile766
                                        height 100%                                        
            &.noticias
                display flex
                background-color white
                justify-content center
                align-items center
                height 400px
                width 100%
                .noticias-content
                    display flex
                    flex-direction column
                    width 80%
                    height 100%
                    h2
                        font-size 34px
                    img
                        width 20%
                        height 100%
                    .noticia
                        max-width 100%
                        width 100%
                        height 100%
