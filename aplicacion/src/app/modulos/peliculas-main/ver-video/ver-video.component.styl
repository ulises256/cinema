
.ver-video
    display flex
    flex-direction columns 
    width 100%
    height 100%
    .ver-video-content
        display flex
        justify-content center
        align-items center
        width 100%
        height 100%
        margin 5px 5px 5px 5px
        .info
            display grid
            width 90%
            grid-gap 10px
            grid-template-columns 1fr 1fr
            grid-template-rows 100% 
            background-color black
            .detalles
                display flex
                flex-direction column
                color white
                margin-right 10px
                border-right 1px solid white
                .bienvenido
                    display flex
                    flex-direction column
                    justify-content center
                    margin 10px 20px 10px 20px
                .vermas
                    display flex
                    flex-direction column
                    justify-content center
                    align-items center
                    .button
                        margin 10px 10px 10px 10px
                        display flex
                        justify-content center
                        align-items center
                        width 50%
                        .mat-raised-button
                            width 100%
            .embed-container 
                position relative
                padding-bottom 56.25%
                overflow hidden
                max-width 100%
                height auto

