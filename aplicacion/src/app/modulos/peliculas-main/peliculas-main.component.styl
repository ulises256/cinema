.tool-bar-spacer
    flex 1 1 auto
mat-sidenav
    width 100%
    display flex
    flex-direction column
    justify-content center
    align-content center
    background-position center center
    background-repeat no-repeat
    background-size cover
    background-color:  transparent
    position absolute
    mat-nav-list
        width 100%
        height 100%
        .mat-list-item
            display flex
            justify-content center
            align-items center
            height 10.5vh
            h1
                color white
                font-size 100px
                text-shadow: -5px -5px 5px #aaa;
.contenedor
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-image url("assets/images/condesa_web_inicio_sesion.png")
    background-position center center
    background-repeat no-repeat
    background-size cover    
    h1
        text-align: center
    .nav-toolbar
        margin: 0% auto
        text-align: center;
        mat-toolbar-row
            display flex
            position relative
            flex-direction row
            justify-content space-around
            align-content center
            color white
            background-color black
            height 100%
            .home-button
                flex 2
                display flex
                margin-left 50px
                flex-direction row
                justify-content center
                align-items center
                a
                    height 64px
                    img
                        width 100%
                        height 100%
            .busqueda
                display flex
                justify-content center
                align-items center
                .line-white
                    position absolute
                    background-color white
                    width 250px
                    height 1px
                    opacity 0.5             
                flex 7
            .botones
                display flex
                flex-direction row
                flex 2
                color white !important
                justify-content flex-end
                align-content center
                margin-right 50px
                a
                    display flex
                    justify-content center
                    align-items center
                    height 64px
                .universidad
                    height 64px
                    img
                        width 172px
                        height 64px
    .footer
        display flex
        background-color black
        width 100%
        z-index 2
        .derechos, .drechos2, .iconos-sociales
            display flex
            flex-direction row
            justify-content center
            align-content center            
        .derechos
            flex 3
            color white
        .drechos2
            color white
            flex 3
        .separator
            flex 7
        .iconos-sociales
            flex 3
            .facebook, .instagram, .twitter
                width 80%
            .facebook
                color white
            a
                display flex
                justify-content center
                align-items center
            img
                width 24px
                height 24px                        

.isMobile
    .nav-toolbar
        position: fixed;
        /* Make sure the toolbar will stay on top of the content as it scrolls past. */
        z-index: 2;
    .sidenav-container
        flex: 1 0 auto
        .mat-sidenav-content
            background-color black
.mat-drawer-content .mat-sidenav-content
    margin: 10px

.sidenav-container
    flex 1
    height 100%
    background-color black
    .contenido
        height 100%

.mat-list-item
        padding 20px
        margin-left: 10px

.mat-nav-list .active-nav
    color: #000000;