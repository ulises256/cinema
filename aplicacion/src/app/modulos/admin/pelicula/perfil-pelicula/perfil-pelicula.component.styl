
.perfil-pelicula
    display flex
    flex-direction columns 
    width 100%
    height 100%
    .perfil-pelicula-content
        width 100%
        height 100%
        margin 5px 5px 5px 5px
        display grid
        grid-gap 5px
        grid-template-columns 100%
        grid-template-rows 1fr 1fr 1fr
        .encabezado, .reparto, .produccion
            margin 0px 50px 0px 50px
            .titulo
                display flex
                flex-direction row
                justify-content center
                align-items center
                h1
                    flex 12
                button 
                    flex 1
            
        .encabezado
            .info
                display grid
                width 100%
                grid-gap 10px
                grid-template-columns 1fr 1fr
                grid-template-rows 100% 
                .detalles
                    display flex
                    flex-direction column
            .portadas
                display flex
                flex-direction column
                width 100%
                margin 10px 10px 10px 10px
                .file
                    display flex
                    justify-content center 
                    align-items center
                    width 100%
                    flex-direction row
                    .dropi
                        flex 1
                        width 100%
                        height 100%            
                    .botones
                        display flex
                        flex-direction column
                        flex 1
                        width 100%
                        height 100%
                        button
                            margin 10px 50px 10px 50px                



mat-grid-list
    mat-grid-tile
        img
            position relative
            width 100%
            height  auto
        .add
            left 0px
        .remove
            right 0px
.green
    background-color #008000

.imge-add-remove
    img
        position relative
        width 100%
        height  auto
    .add
        left 0px
    .remove
        right 0px


.image_wrapper .add, .image_wrapper .remove
    position absolute
    top 0px
    opacity 0
    transition opacity 0.2s linear
    -webkit-transition opacity 0.2s linear
    cursor pointer
    border 0px
    width 50px
    height 50px

.image_wrapper:hover .add, .image_wrapper:hover .remove
    transition opacity 0.2s linear
    -webkit-transition opacity 0.2s linear
    opacity 0.8