            .grid
                mat-grid-list
                    mat-grid-tile
                        border 2px solid black
mat-grid-list
    mat-grid-tile
        img
            position relative
            width 100%
            height  auto
        .add
            left 0px
        .remove
            right 0px
.green
    background-color #008000

.imge-add-remove
    img
        position relative
        width 100%
        height  auto
    .add
        left 0px
    .remove
        right 0px


.image_wrapper .add, .image_wrapper .remove
    position absolute
    top 0px
    opacity 0
    transition opacity 0.2s linear
    -webkit-transition opacity 0.2s linear
    cursor pointer
    border 0px
    width 50px
    height 50px

.image_wrapper:hover .add, .image_wrapper:hover .remove
    transition opacity 0.2s linear
    -webkit-transition opacity 0.2s linear
    opacity 0.8