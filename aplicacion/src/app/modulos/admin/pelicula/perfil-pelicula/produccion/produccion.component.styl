        width 100%
        height 100%
        margin 5px 5px 5px 5px
        .titulo
            margin 10px 50px 10px 50px
        .images
            display flex
            width 100%
            height 100%
            flex-direction column
            .file
                display flex
                justify-content center 
                align-items center
                width 100%
                flex-direction row
                .dropi
                    flex 1
                    width 100%
                    height 100%            
                .botones
                    display flex
                    flex-direction column
                    flex 1
