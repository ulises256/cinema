form( class="contenedor" [formGroup]="form" (ngSubmit)="submit(form)" novalidate)
    mat-dialog-content.contenido
        mat-form-field(class="input-layout")
            input(matInput formControlName="nombre" placeholder="Nombre del Actor" required)
        mat-form-field(class="input-layout")
            input(matInput formControlName="apellidos" placeholder="Apellido del Actor" required)            
        mat-form-field(class="input-layout")
            textarea(matInput  formControlName="biblio" placeholder="Descripci√≤n" rows="5" required)
        .logo
            button(mat-icon-button type="button" (click)="fileInput.click()" matTooltip="Subir Imagen")
                mat-icon add_a_photo
            input(#fileInput type="file" accept="*"  formControlName="imagen" (change)="handleFileSelect($event)" style="display:none;" )
            img([src]="domSanitizer.bypassSecurityTrustUrl(data.getFoto()?.imagen)")
            mat-error(*ngIf="!this.data.getFoto()") Requiere una imagen
    mat-dialog-actions.botones
        button(mat-button type="button" (click)="cancelar()") Cancelar
            mat-icon cancel
        button(mat-button type="submit") Ok
            mat-icon done
