.video-js
    position absolute
    width 100%
    height 100%
    .vjs-big-play-button
        background-color black
        opacity .6
    .vjs-play-progress
        background-color black
    .vjs-control:hover:before, .vjs-control:focus:before 
	    text-shadow 0 0 1em #f00
    .vjs-overlay
        background linear-gradient(200deg, rgba(0, 0, 0, .5) 20%, transparent)
        height 100%
        width 100% !important
    .vjs-overlay-top-left
        top 0px
        left 0px

#reparto
    width 100%
    height 100%
    display flex
    flex-direction row
    .actores
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center
        drag-scroll
            width 60%
            height 60%
        .slide
            height 100%
            width 100%
            background-position center
            background-repeat no-repeat
            background-size cover            
#produccion       
    mat-grid-list
        mat-grid-tile
            img
                height 100%
                width 100%                
