mobile-1250 = '@media only screen and (max-width: 1250px)'

.home
    display flex
    width 100%
    height 100%
    justify-content center
    align-items center
    background-color black
    .home-content
        display flex
        flex-direction column
        width 100%
        height 100%
        section
            width 100%
            flex 1
            &.estrenos
                color white
                height 600px
                background-position center
                background-repeat no-repeat
                background-size cover
                .estrenos-content
                    display flex
                    flex-direction column
                    height 100%
                    margin 10px 50px 10px 50px
                    h2
                        font-size 34px
                    .titulo
                        display flex
                        flex-direction column
                        justify-content center
                        align-items center
                        height 100%
                        .title
                            h1
                                font-size 100px
                                height 10px
                            p
                                font-size 54px
                            .line-white
                                position absolute
                                background-color white
                                width 250px
                                height 1px
                        .button
                            width 12%
                            height 10%
                            .mat-raised-button
                                width 100%
                                height 100%
                                border-radius 10px
                                display flex
                                justify-content center
                                align-content center
                                font-size 24px
                                background-color black
                                line-height 46px
                    .pie
                        display flex
                        justify-content flex-end
            &.cartelera
                display flex
                color white
                background-color #212121
                height 100%
                .cartelera-content
                    display flex
                    flex-direction column
                    position relative
                    height 100%
                    width 100%
                    margin 10px 50px 10px 50px
                    h2
                        font-size 34px
                    mat-grid-list
                        width 100%
                        mat-grid-tile
                            width 100%
                            height 100%
                            img 
                                width 200px
                                height 200px
