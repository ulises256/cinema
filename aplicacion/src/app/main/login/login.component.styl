.input-layout
    width: 100%;
    flex: 1 1 auto;
.login
    display flex
    width 100%
    min-height 100%
    justify-content center
    align-items center
    .contenedor
        display flex
        width 50%
        height 100%
        flex-direction column
        .formulario
            display flex
            flex-direction column
            justify-content center
            align-items center
        .contenido
            width 100%
            height 100%
        .botones
            display flex
            flex-direction column
            height 100%
            width 100%
            button 
                width 100%
        .social-botones
            display flex
            flex-direction column
            width 100%
            justify-content center
            align-items center
            margin 10px 0px 10px 0px
            .fb
                -moz-user-select none
                background #2A49A5
                border 1px solid #082783
                box-shadow 0 1px #4C6BC7 inset
                height auto
                width 80%
                color white
                padding 3px 5px
                text-decoration none
                text-shadow 0 -1px 0 #082783
                font 12px Verdana, sans-serif
                img
                    width 24px
                    height 24px
